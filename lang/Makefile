srcdir  	= .
top_srcdir  	= ..
CC		= gcc
CFLAGS  	= -g -Wall -Wall 
LDFLAGS 	= 
LIBS    	= -ldl -lnsl -lcrypt -lqdbm -l:libcligen.so.3 -lm -L /usr/local/lib

SHELL	= /bin/sh

SUBDIRS = python

.PHONY: all clean depend install $(SUBDIRS)

all:	$(SUBDIRS)

depend:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

$(SUBDIRS):
	(cd $@; $(MAKE) $(MFLAGS) all)

install-include:
	for i in $(SUBDIRS); \
	do (cd $$i ; $(MAKE) $(MFLAGS) $@); done; 

install:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

uninstall:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

clean:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

distclean: clean
	rm -f Makefile *~ .depend
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

tags:
	find $(srcdir) -name '*.[chyl]' -print | etags -
