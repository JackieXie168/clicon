VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
prefix 		= @prefix@
datadir 	= @datarootdir@
bindir 		= @bindir@
includedir	= @includedir@
localstatedir	= @localstatedir@
INSTALL		= @INSTALL@
CC		= @CC@
CFLAGS  	= @CFLAGS@ -rdynamic -fPIC 
INCLUDES 	= -I$(includedir) @INCLUDES@ 

APPNAME		= hello

# Defines clicon_*DIR variables and $(APPNAME).conf
-include $(datadir)/clicon/clicon.mk

all:	$(APPNAME).conf

clean:
	rm -f $(APPNAME).conf

distclean: 	clean
	rm -f Makefile *~ .depend

install:	$(APPNAME).conf $(APPNAME).yang $(APPNAME)_cli.cli 
	install -d $(clicon_SYSCONFDIR)
	install $(APPNAME).conf $(clicon_SYSCONFDIR)/
	install -d $(DESTDIR)$(clicon_LIBDIR)/clispec
	install $(APPNAME)_cli.cli $(clicon_LIBDIR)/clispec
	install -d $(clicon_DBSPECDIR)/yang
	install $(APPNAME).yang $(clicon_DBSPECDIR)/yang
	install -d $(DESTDIR)$(clicon_LOCALSTATEDIR)

uninstall: 
	rm -rf $(DESTDIR)$(clicon_SYSCONFDIR)/$(APPNAME).conf
	rm -rf $(DESTDIR)$(clicon_DBSPECDIR)
	rm -rf $(DESTDIR)$(clicon_LOCALSTATEDIR)
	rm -rf $(DESTDIR)$(clicon_LIBDIR)

install-include:	

