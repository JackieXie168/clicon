VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
prefix 		= @prefix@
bindir 		= @bindir@
includedir	= @includedir@
datarootdir     = @datarootdir@

localstatedir	= @localstatedir@
INSTALL		= @INSTALL@
CC		= @CC@
CFLAGS  	= @CFLAGS@ -rdynamic -fPIC 

INCLUDES 	= -I$(includedir) @INCLUDES@ 

APPNAME		= ntp

FE_PLUGIN       = ntp_cli.so
NC_PLUGIN       = ntp_netconf.so
BE_PLUGIN       = ntp_backend.so

PLUGINS = $(FE_PLUGIN) $(BE_PLUGIN) $(NC_PLUGIN) 

all:	$(PLUGINS) $(APPNAME).conf

# Includes clicon dirs
-include $(datarootdir)/clicon/clicon.mk

# You can add more .c:s for every SRC.
FE_SRC   = ntp_cli.c
NC_SRC   = ntp_netconf.c
BE_SRC   = ntp_backend.c

SRC = $(FE_SRC) $(BE_SRC) $(NC_SRC) 

.c.o: $(SRC)
	$(CC) $(INCLUDES) $(CPPFLAGS) $(CFLAGS) -c $<

FE_OBJ   = $(FE_SRC:%.c=%.o)
BE_OBJ   = $(BE_SRC:%.c=%.o)
NC_OBJ   = $(NC_SRC:%.c=%.o)

OBJS = $(FE_OBJ) $(BE_OBJ) $(NC_OBJ) 

$(FE_PLUGIN): $(FE_OBJ)
	$(CC) -shared -o $(FE_PLUGIN) -lc $<

$(NC_PLUGIN): $(NC_OBJ)
	$(CC) -shared -o $(NC_PLUGIN) -lc $<

$(BE_PLUGIN): $(BE_OBJ)
	$(CC) -shared -o $(BE_PLUGIN) -lc $<

clean:
	rm -f $(OBJS) $(PLUGINS) $(APPNAME).conf

distclean: clean
	rm -f Makefile *~ .depend

install:	$(APPNAME).conf ntp.yang ntp_cli.cli $(FE_PLUGIN) $(NC_PLUGIN) $(BE_PLUGIN)
	install -d $(DESTDIR)$(clicon_SYSCONFDIR)
	install -d $(DESTDIR)$(clicon_SYSCONFDIR)/yang
	install $(APPNAME).conf $(DESTDIR)$(clicon_SYSCONFDIR)/
	install -d $(DESTDIR)$(clicon_DBSPECDIR)/yang
	install ntp.yang $(DESTDIR)$(clicon_DBSPECDIR)/yang
	install -m 755 ntp.yang $(DESTDIR)$(APPDIR)/yang
	install -d $(DESTDIR)$(clicon_LIBDIR)/clispec
	for i in ntp_cli.cli; do \
		install $$i $(DESTDIR)$(clicon_LIBDIR)/clispec/`basename $$i`; \
	done
	install -d $(DESTDIR)$(clicon_LIBDIR)/cli
	for i in $(FE_PLUGIN); do \
		install $$i $(DESTDIR)$(clicon_LIBDIR)/cli/`basename $$i`; \
	done
	install -d $(DESTDIR)$(clicon_LIBDIR)/netconf
	for i in $(NC_PLUGIN); do \
		install $$i $(DESTDIR)$(clicon_LIBDIR)/netconf/`basename $$i`; \
	done
	install -d $(DESTDIR)$(clicon_LIBDIR)/backend
	for i in $(BE_PLUGIN); do \
		install $$i $(DESTDIR)$(clicon_LIBDIR)/backend/`basename $$i`; \
	done
	install -d $(DESTDIR)$(clicon_LOCALSTATEDIR)

uninstall: 
	rm -rf $(DESTDIR)$(clicon_SYSCONFDIR)/$(APPNAME).conf
	rm -rf $(DESTDIR)$(clicon_DBSPECDIR)
	rm -rf $(DESTDIR)$(clicon_LOCALSTATEDIR)
	rm -rf $(DESTDIR)$(clicon_LIBDIR)

install-include:	

depend:
	$(CC) $(DEPENDFLAGS) @DEFS@ $(INCLUDES) $(CFLAGS) -MM $(SRC) > .depend

#include .depend

