srcdir  	= .
top_srcdir  	= ../..
prefix 		= /usr/local
bindir 		= ${exec_prefix}/bin
includedir	= ${prefix}/include
datarootdir	= @datarootdir@

INSTALL		= @INSTALL@
APPDIR          = /usr/local/share/clicon
CC		= gcc
CFLAGS  	= -O2 -Wall -rdynamic -fPIC 

INCLUDES 	= -I$(includedir)  

BE_PLUGIN       = routing_backend.so

PLUGINS = $(BE_PLUGIN)

# Note: clicon.mk has a rule for:
# $(APPNAME.conf)
-include $(DESTDIR)$(datarootdir)/clicon/clicon.mk

SPECS	 = $(APPNAME).yang
SPECS	+= ietf-yang-types@2013-07-15.yang
SPECS	+= ietf-yang-types@2013-07-15.yang
SPECS	+= ietf-yang-types@2013-07-15.yang
SPECS	+= ietf-yang-types@2013-07-15.yang

all:	$(PLUGINS)

BE_SRC   = routing_backend.c
SRC = $(BE_SRC)

BE_OBJ   = $(BE_SRC:%.c=%.o)
OBJS = $(BE_OBJ)

$(BE_PLUGIN): $(BE_OBJ)
	$(CC) -shared -o $(BE_PLUGIN) -lc $<

clean:
	rm -f $(OBJS) $(BE_PLUGIN)

distclean: clean
	rm -f clicon.conf Makefile *~ .depend

install: $(SPECS) $(CLI_PLUGINS) $(BE_PLUGIN) $(PLUGINS) $(APPNAME).conf
	$(INSTALL) -d $(DESTDIR)$(clicon_DBSPECDIR)
	$(INSTALL) $(SPECS) $(DESTDIR)$(clicon_DBSPECDIR)
	$(INSTALL) -d $(DESTDIR)$(clicon_SYSCONFDIR)
	$(INSTALL) -d $(DESTDIR)$(clicon_LOCALSTATEDIR)
	$(INSTALL) -d $(DESTDIR)$(clicon_LIBDIR)
	$(INSTALL) -d $(DESTDIR)$(clicon_LIBDIR)/cli
	$(INSTALL) -d $(DESTDIR)$(clicon_LIBDIR)/backend
	$(INSTALL) -d $(DESTDIR)$(clicon_LIBDIR)/netconf
	$(INSTALL) -d $(DESTDIR)$(bindir)
	for i in $(CLI_PLUGINS); do \
		install $$i $(DESTDIR)$(clicon_LIBDIR)/cli; \
	done
	for i in $(BE_PLUGIN); do \
		install $$i $(DESTDIR)$(clicon_LIBDIR)/backend; \
	done
	$(INSTALL) $(APPNAME).conf $(DESTDIR)$(clicon_SYSCONFDIR)

uninstall: 
	rm -rf $(APPDIR)/cli
	rm -rf $(APPDIR)/clispec
	rm -rf $(APPDIR)/db
	rm -rf $(APPDIR)/archive
	rm -rf $(APPDIR)/yang
	rm -rf $(APPDIR)/*

install-include:	

depend:
#	$(CC) $(DEPENDFLAGS) -DHAVE_CONFIG_H $(INCLUDES) $(CFLAGS) -MM $(SRC) > .depend

#include .depend

