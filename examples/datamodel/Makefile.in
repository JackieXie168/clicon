VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
prefix 		= @prefix@
datarootdir 	= @datarootdir@
bindir 		= @bindir@
includedir	= @includedir@
localstatedir	= @localstatedir@
INSTALL		= @INSTALL@
CC		= @CC@
CFLAGS  	= @CFLAGS@ -rdynamic -fPIC 

INCLUDES 	= -I$(includedir) @INCLUDES@ 

# Includes clicon dirs
APPNAME		= datamodel

FE_PLUGIN       = datamodel_cli.so
BE_PLUGIN       = datamodel_backend.so

PLUGINS = $(FE_PLUGIN) $(BE_PLUGIN)

all:	$(PLUGINS) $(APPNAME).conf

-include $(datarootdir)/clicon/clicon.mk

FE_SRC   = datamodel_cli.c
BE_SRC   = datamodel_backend.c
SRC = $(FE_SRC) $(BE_SRC)

FE_OBJ   = $(FE_SRC:%.c=%.o)
BE_OBJ   = $(BE_SRC:%.c=%.o)
OBJS = $(FE_OBJ) $(BE_OBJ)

$(FE_PLUGIN): $(FE_OBJ)
	$(CC) $(INCLUDES) -shared -o $(FE_PLUGIN) -lc $<

$(BE_PLUGIN): $(BE_OBJ)
	$(CC) $(INCLUDES) -shared -o $(BE_PLUGIN) -lc $<

clean:
	rm -f $(OBJS) $(PLUGINS) $(APPNAME).conf

distclean: clean
	rm -f Makefile *~ .depend

install:	$(APPNAME).conf datamodel.yang extmodel.yang datamodel_cli.cli $(FE_PLUGIN) $(BE_PLUGIN)
	install -d $(DESTDIR)$(clicon_SYSCONFDIR)
	install $(APPNAME).conf $(DESTDIR)$(clicon_SYSCONFDIR)/
	install -d $(DESTDIR)$(clicon_DBSPECDIR)/yang
	install datamodel.yang extmodel.yang $(DESTDIR)$(clicon_DBSPECDIR)/yang
	install -d $(DESTDIR)$(clicon_LIBDIR)/clispec
	install datamodel_cli.cli $(clicon_LIBDIR)/clispec
	install -d $(DESTDIR)$(clicon_LIBDIR)/cli
	for i in $(FE_PLUGIN); do \
		install $$i $(clicon_LIBDIR)/cli/`basename $$i`; \
	done
	install -d $(DESTDIR)$(clicon_LIBDIR)/backend
	for i in $(BE_PLUGIN); do \
		install $$i $(clicon_LIBDIR)/backend/`basename $$i`; \
	done
	install -d $(DESTDIR)$(clicon_LOCALSTATEDIR)

# Assumes dirs are solely for this application  (eg ends with APPNAME)
uninstall: 
	rm -rf $(DESTDIR)$(clicon_SYSCONFDIR)/$(APPNAME).conf
	rm -rf $(DESTDIR)$(clicon_DBSPECDIR)
	rm -rf $(DESTDIR)$(clicon_LOCALSTATEDIR)
	rm -rf $(DESTDIR)$(clicon_LIBDIR)

install-include:	

depend:
